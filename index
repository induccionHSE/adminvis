<div id="barraProgreso" style="height: 6px; background-color: #007BFF; width: 0%; position: fixed; top: 0; left: 0; z-index: 999; transition: width 0.4s;"></div>
<div class="container">
  <!-- Secciones mantenidas y ajustadas: Bienvenida, Objetivo, Políticas, Riesgos administrativos, etc. -->
  <!-- Las secciones eliminadas ya no estarán aquí -->
</div>
<div class="nav-buttons">
  <button id="btnAnterior" onclick="prevSection()">Anterior</button>
  <button id="btnSiguiente" onclick="nextSection()">Siguiente</button>
</div>
<script>
  let current = 0;
  const sections = document.querySelectorAll("section");
  const btnAnterior = document.getElementById("btnAnterior");
  const btnSiguiente = document.getElementById("btnSiguiente");
  function show(index) {
    sections.forEach((s, i) => {
      s.classList.toggle("active", i === index);
    });
    btnAnterior.style.display = (index === 0) ? "none" : "inline-block";
    btnSiguiente.style.display = (index === sections.length - 1) ? "none" : "inline-block";
    const progreso = ((index + 1) / sections.length) * 100;
    document.getElementById("barraProgreso").style.width = progreso + "%";
    const advertencia = document.getElementById("advertencia-check");
    if (advertencia) advertencia.remove();
  }
  function nextSection() {
    if (current === 12) {
      const checkboxes = sections[current].querySelectorAll('input[type="checkbox"]');
      const todosMarcados = Array.from(checkboxes).every(cb => cb.checked);
      if (!todosMarcados) {
        if (!document.getElementById("advertencia-check")) {
          const advertencia = document.createElement("p");
          advertencia.id = "advertencia-check";
          advertencia.textContent = "⚠️ Por favor marca todos los ítems antes de continuar.";
          advertencia.style.color = "red";
          advertencia.style.marginTop = "15px";
          sections[current].appendChild(advertencia);
        }
        return;
      }
    }
    if (current < sections.length - 1) {
      current++;
      show(current);
    }
  }
  function prevSection() {
    if (current > 0) {
      current--;
      show(current);
    }
  }
  document.addEventListener("DOMContentLoaded", () => show(current));
</script>
</body>
